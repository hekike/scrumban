  "dependencies": {
    "joi": "^7.0.0",
    "koa": "^1.1.2",
    "koa-bodyparser": "^2.0.1",
    "koa-hbs": "^0.7.0",
    "koa-helmet": "^0.3.0",
    "koa-jwt": "^1.1.1",
    "koa-router": "^5.2.3",
    "koa-static": "^1.5.2",
    "thunkify": "^2.1.2",
